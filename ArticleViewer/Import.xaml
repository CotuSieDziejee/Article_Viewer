<Window x:Class="ArticleViewer.Import"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArticleViewer"
        mc:Ignorable="d"
        Title="Import" Height="450" Width="464.22">
    <Grid>
        <TextBox x:Name="src" HorizontalAlignment="Left" Height="48" Margin="10,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" FontSize="24" IsReadOnly="True"/>
        <Button x:Name="browse" Content="..." HorizontalAlignment="Left" Height="48" Margin="400,56,0,0" VerticalAlignment="Top" Width="48" Click="Browse_Click"/>
        <Button x:Name="import" Content="Import" HorizontalAlignment="Left" Height="56" Margin="10,354,0,0" VerticalAlignment="Top" Width="163" Click="import_Click"/>
        <Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Left" Height="56" Margin="285,354,0,0" VerticalAlignment="Top" Width="163" Click="Cancel_Click"/>

    </Grid>
</Window>
